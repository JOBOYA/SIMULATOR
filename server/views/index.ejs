<form action="" method="POST">
  <div class="container">
       <p>Votre Activité</p>
        <select name="activite" id="activite">
            <option value="ARISANT" id="activite">ARTISANT</option>
            <option value="COMMERCANT" id="activite">COMMERCANT</option>
            <option value="CONSULTANT" id="activite">CONSULTANT</option>
            <option value="LIBERAL" id="activite">LIBERAL</option>
